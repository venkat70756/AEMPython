<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Custom Container"
    sling:resourceType="cq/gui/components/authoring/dialog"
    title="Container 25% 75%">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <cardredirectionopen
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldDescription="Container Size"
                        fieldLabel="Container Size"
                        name="./containerDropdown">
                        <items jcr:primaryType="nt:unstructured">
                            <option1
                                jcr:primaryType="nt:unstructured"
                                text="Container 100%"
                                value="fullwidth"/>
                            <option2
                                jcr:primaryType="nt:unstructured"
                                text="Container 15% 85%"
                                value="col-2-col-10-width"/>
                            <option3
                                jcr:primaryType="nt:unstructured"
                                text="Container 15% 62% 23%"
                                value="col-2-col-7-col-3-width"/>
                        </items>
                    </cardredirectionopen>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
